doctype html
html
  head
    title Login Page
    style.
      body {
        font-family: Arial, sans-serif;
      }
      .container {
        width: 300px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        background-color: #f5f5f5;
      }
      h1 {
        text-align: center;
      }
      .form-group {
        margin-bottom: 15px;
      }
      .form-group label {
        display: block;
        font-weight: bold;
      }
      .form-group input[type="text"],
      .form-group input[type="password"] {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 5px;
      }
      .btn {
        display: block;
        width: 100%;
        padding: 10px;
        text-align: center;
        border: none;
        border-radius: 5px;
        background-color: #4CAF50;
        color: #fff;
        font-size: 16px;
        cursor: pointer;
      }
      .btn:hover {
        background-color: #45a049;
      }

  body
    .container
      h1 Login
      form(action="/login" method="POST")
        .form-group
          label(for="username") Username:
          input(type="text" id="username" name="username" required)
        .form-group
          label(for="password") Password:
          input(type="password" id="password" name="password" required)
        .form-group
          button.btn(type="submit") Login
          p= message
